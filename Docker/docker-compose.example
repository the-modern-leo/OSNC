version: '3.3'
services:
  db:
    image: mysql:5.7
    restart: always
    environment:
        MYSQL_DATABASE: 'db'
        MYSWL_USER: "add-me"
        MYSQL_PASSWORD: "add-me"
        MYSQL_ROOT_PASSWORD: "add-me"
    ports:
      - '3306:3306'
    expose:
      - '3306'
    volumes:
      - my-db:/var/lib/mysql
  webserver:
    image: OSNC
    ports:
      - "443:8443"
    environment:
      - ./auth.py:/opt/porject/auth.py:ro
volumes:
  my-db: